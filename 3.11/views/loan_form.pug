extends layout

block content

  h1 #{title}
          
  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#license.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='email' required='true' value=(undefined===loan ? '' : loan.email) )
      label(for='city') City:
      input#city.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='city' required='true' value=(undefined===loan ? '' : loan.city) )
      label(for='type') Type:
      input#model.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='type' required='true' value=(undefined===loan ? '' : loan.type) )
      label(for='start_date') start_date:
      input#type.form-control(type='date', placeholder='Fantasy, Poetry etc.' name='start_date' required='true' value=(undefined===loan ? '' : loan.start_date) )
      label(for='end_date') end_date:
      input#fare.form-control(type='date', placeholder='Fantasy, Poetry etc.' name='end_date' required='true' value=(undefined===loan ? '' : loan.end_date) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
